<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/style.css">
<%- include('../partials/flash') %>

<div class="container-fluid d-flex justify-content-center">
  <div class="row w-100 p-3">
    <div class="col-md-6">
      <div class="video-container">
        <div id="qr-reader" style="width: 600px; height: 450px;"></div>
        <div class="button-container">
          <div class="btn-group d-flex justify-content-center align-items-center" role="group" aria-label="Time Action">
            <button type="button" class="btn btn-secondary" data-action="timeIn">Time In</button>
            <button type="button" class="btn btn-secondary" data-action="timeOut">Time Out</button>
          </div>
          <div class="btn-group mt-3" role="group" aria-label="Class Selection">
            <button type="button" class="btn btn-secondary" data-class="Khmer Class (Full-Time)">Khmer Class (Full-Time)</button>
            <button type="button" class="btn btn-secondary" data-class="English Class (Full-Time)">English Class (Full-Time)</button>
            <button type="button" class="btn btn-secondary" data-class="English Class (Part-Time)">English Class (Part-Time)</button>
            <button type="button" class="btn btn-secondary" data-class="Office Hour (Part-Time)">Office Hour (Part-Time)</button>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 mt-3">
      <div class="clock" id="clock-container">
        <p id="clock" class="fw-bold fs-4 text-center"></p>
      </div>
      <div id="attendance-container">
        <!-- Table will be inserted here dynamically -->
      </div>
    </div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/javascript/script.js"></script>
