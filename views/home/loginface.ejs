<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/style.css">
<%- include('../partials/flash') %>

<div class="container-fluid d-flex justify-content-center">
  <div class="row w-100 p-3">
    <div class="col-md-6">
      <div class="video-container">
        <div id="qr-reader" style="width: 600px; height: 450px;"></div>
        <div class="button-container">
          <select id="actionSelect" class="form-select ms-3">
            <option value="timeIn">Time In</option>
            <option value="timeOut">Time Out</option>
          </select>
          <select id="classSelect" class="form-select ms-3 mt-3">
            <option value="Khmer Class (Full-Time)">Khmer Class (Full-Time)</option>
            <option value="English Class (Full-Time)">English Class (Full-Time)</option>
            <option value="English Class (Part-Time)">English Class (Part-Time)</option>
            <option value="Office Hour (Part-Time)">Office Hour (Part-Time)</option>
          </select>
        </div>
      </div>
    </div>
    <div class="col-md-6 mt-3">
      <div class="clock" id="clock-container">
        <p id="clock" class="fw-bold fs-4 text-center"></p>
      </div>
      <div id="attendance-container">
        <!-- Table will be inserted here dynamically -->
      </div>
    </div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/javascript/script.js"></script>
